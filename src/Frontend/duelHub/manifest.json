{
  "manifest_version": 3,
  "name": "듀얼허브(DUELHub)",
  "description": "Automatically integrate your TIL submissions to GitHub",
  "homepage_url": "https://github.com/CSID-DGU/2024-1-OSSProj-Questionmark-07",
  "version": "1.8",
  "author": "ehddud1006",
  "action": {
    "default_icon": "assets/thumbnail.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/thumbnail.png",
    "48": "assets/thumbnail.png",
    "128": "assets/thumbnail.png"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://www.naver.com", "https://github.com/"],
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": [
        "library/jquery-3.3.1.min.js",
        "library/semantic.min.js",
        "popup.html",
        "popup.js",
        "welcome.html",
        "welcome.js"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["scripts/authorize.js", "scripts/util.js", "scripts/Github.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.naver.com"],
      "js": [
        "library/sha1.min.js",
        "library/jszip.min.js",
        "scripts/authorize.js",
        "scripts/duel.js",
        "scripts/util.js",
        "scripts/Github.js",
        "scripts/uploadfunctions.js",
        "scripts/storage.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
